{
    "include": ["./src/"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "rootDir": "src",
        "outDir": "build",
        "emitBOM": false,
        "newLine": "lf",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowJs": true
    }
}
